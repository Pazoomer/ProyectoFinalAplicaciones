<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="4dp">

    <TextView
        android:id="@+id/tvAsignarDiasA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asignar a Beto los días:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <CheckBox
            android:id="@+id/cbLunes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L"
            android:buttonTint="@color/black"/>

        <CheckBox
            android:id="@+id/cbMartes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ma"
            android:buttonTint="@android:color/black"/>

        <CheckBox
            android:id="@+id/cbMiercoles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi"
            android:buttonTint="@color/black"/>

        <CheckBox
            android:id="@+id/cbJueves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J"
            android:buttonTint="@color/black"/>

        <CheckBox
            android:id="@+id/cbViernes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V"
            android:buttonTint="@color/black"/>

        <CheckBox
            android:id="@+id/cbSabado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:buttonTint="@color/black"/>

        <CheckBox
            android:id="@+id/cbDomingo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D"
            android:buttonTint="@color/black"/>
    </LinearLayout>

    <!-- CheckBox para 'Todos los días' -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/btnTodosDias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_button_light"
            android:padding="8dp">

            <CheckBox
                android:id="@+id/cbTodos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todos los días"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/eliminate"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
