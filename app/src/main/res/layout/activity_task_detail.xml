<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".TaskDetail">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back_arrow_svg"
            android:layout_marginRight="270dp"
            />


    </LinearLayout>

    <TextView
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/tv_titulotarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lavar trastes"/>
    <TextView
        android:textSize="20sp"
        android:id="@+id/tv_descripcion"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Limpiar los trastes con cloro, ya tienen mucha comida"/>

    <ListView
        android:id="@+id/lvTaskDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>



</LinearLayout>