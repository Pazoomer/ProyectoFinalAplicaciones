<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_gravity="right"
            android:paddingEnd="10dp">
            <ImageView
                android:id="@+id/ivSettings"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/settings"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_casanombre_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Casa mochiss"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#00B2BE"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_switch"
            android:padding="2.5dp"
            android:layout_gravity="center">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchOnOff"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:checked="true"
                android:textColor="@color/white"
                android:thumb="@drawable/thumb_selector"
                app:switchMinWidth="140dp"
                app:track="@drawable/track_selector" />

            <LinearLayout
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tvSwitchHoy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Hoy"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvSwitchSemanal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Semanal"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>
        </RelativeLayout>



        <ListView
            android:id="@+id/lv_dias"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/addTask"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/add_task"
        android:contentDescription="Agregar tarea"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="bottom|end"/>
</FrameLayout>
